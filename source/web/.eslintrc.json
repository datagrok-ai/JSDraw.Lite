{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2, {"SwitchCase": 0}],
    "quotes": [0],
    "max-len": ["error", 120],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", { "varsIgnorePattern": "^(_|ui$|grok$|DG$)", "argsIgnorePattern": "^_"}],
    "require-jsdoc": "off",
    "valid-jsdoc": "warn",
    "spaced-comment": "off",
    "linebreak-style": "off",
    "curly": [
      "error",
      "multi-or-nest"
    ],
    "brace-style": ["error", "1tbs", {"allowSingleLine": true}],
    "block-spacing": [2, "always"],
    "comma-dangle": [
      "error", {
        "arrays": "only-multiline",
        "functions": "only-multiline",
        "objects": "only-multiline",
        "imports": "only-multiline"
      }
    ],
    "guard-for-in": "off"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ]
}
